{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/mode-de-paiement",
        "destination": "/page-payment.html"
      },
      {
        "source": "/accueil",
        "destination": "/index.html"
      },
      {
        "source": "/vip",
        "destination": "/vip.html"
      },
      {
        "source": "/abonnement",
        "destination": "/abonnement.html"
      },
      {
        "source": "/connexion",
        "destination": "/connexion.html"
      }
    ]
  }
}
